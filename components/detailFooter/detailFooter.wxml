<!--components/detailFooter/detailFooter.wxml-->
<view class="detail-footer">
  <view class="left">
    <view class="tool-item">
      <text class="iconfont  icon-kefu1"></text>
      <view class="text">客服</view>
      <button  class="btn" open-type="contact"></button>
    </view>
    <view class="tool-item">
      <text class="iconfont icon-fenxiang"></text>
      <view class="text">分享</view>
      <button  class="btn" open-type="share"></button>
    </view>
    <navigator url="/pages/cart/index" open-type="switchTab" class="tool-item">
      <text class="iconfont icon-gouwuche"></text>
      <view class="text">购物车</view>
    </navigator>
  </view>
  <view class="add-cart" bindtap="addCart">加入购物车</view>
  <view class="buy">立即购买</view>
</view>
